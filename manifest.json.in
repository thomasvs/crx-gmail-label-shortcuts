{
    "manifest_version": 2,
    "name": "GDE Sample: Chrome extension Google APIs",
    "version": "2",
    "icons": {
        "16": "img/developers-logo.png",
        "48": "img/developers-logo.png",
        "128": "img/developers-logo.png"
    },
    "permissions": [
        "background",
        "identity",
        "notifications",
        "storage",
        "alarms",
        "https://www.googleapis.com/*",
        "https://*.googleusercontent.com/*",

        "https://mail.google.com/*",
	  "http://*/*",
        "https://*/*",
	"activeTab"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "19": "img/gmail-logo.png",
            "38": "img/gmail-logo.png"
        },
        "default_title": "Click to Sign in with Google"
    },
    "oauth2": {
        "client_id": "${CLIENT_ID}",
        "scopes": [
            "profile",
            "https://www.googleapis.com/auth/gmail.modify"
        ]
    },
    "key": "${KEY}",
  "commands": {
    "next-action": {
      "suggested_key": {
        "default": "Ctrl+Shift+6"
       },
      "description": "Move current mail to @GTD/S/nextaction"
    },
    "waiting-for": {
      "suggested_key": {
        "default": "Ctrl+Shift+7"
       },
      "description": "Move current mail to @GTD/S/waitingfor"
    }
  }

}
